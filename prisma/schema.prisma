generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Product {         
  id          String @id @default(uuid())
  name        String @unique
  description String
  price       Float
  image       String
                        // NOVOS DECORATORS ABAIXO:
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("product")
}
